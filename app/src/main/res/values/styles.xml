<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ChatInputStyle" parent="Widget.Material3.TextInputLayout.OutlinedBox">

        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:fitsSystemWindows">false</item>
        <!-- Stroke and Hint Colors -->
        <item name="boxStrokeColor">@color/message_input_colors</item>
        <item name="hintTextColor">@color/purple_light</item>

        <!-- Rounded Corners -->
        <item name="shapeAppearanceOverlay">@style/ChatInputShape</item>

        <!-- Other Customizations -->
        <item name="boxBackgroundMode">outline</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
    </style>

    <style name="ChatInputShape">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">24dp</item>
    </style>

    <style name="GenZ.HintText" parent="TextAppearance.Material3.LabelSmall">
        <item name="android:textColor">@color/switch_thumb</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Toolbar Title -->
    <style name="ToolbarItemTextAppearance">
        <item name="android:textSize">16dp</item>
        <item name="fontFamily">sans-serif-medium</item>
        <item name="fontStyle">italic</item>
        <item name="android:textColor">@color/brand_main_text</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceHeadline6</item>
    </style>
    
    <!-- Toolbar Subtitle -->
    <style name="ToolbarSubtitleTextAppearance">
        <item name="android:textSize">12dp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">@color/brand_main_text</item>
        <item name="android:alpha">0.7</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?attr/textAppearanceSubtitle2</item>
    </style>

    <style name="DialogSlideAnim" parent="Theme.Material3.DayNight.Dialog">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>

    <style name="PinKeypadButton">
        <item name="android:layout_width">75dp</item>  <!--initial was 0dp-->
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/brand_main_text</item>
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:layout_columnWeight">1</item>
    </style>

    <!-- Conversation Item Styles -->
    <style name="ShapeAppearance.App.CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
</resources>