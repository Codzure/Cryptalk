<!-- pin_input_dialog.xml - PIN entry dialog for encryption/decryption -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter 4-digit PIN"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/dialogDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This PIN will be used to encrypt your message."
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/dialogTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/pinDotsContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/dialogDescription">

        <TextView
            android:id="@+id/pinDot1"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/pin_dot_empty"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/pinDot2"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/pin_dot_empty"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/pinDot3"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/pin_dot_empty"
            android:layout_margin="8dp" />

        <TextView
            android:id="@+id/pinDot4"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@drawable/pin_dot_empty"
            android:layout_margin="8dp" />
    </LinearLayout>

    <!-- Numeric keypad for PIN entry -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/pinKeypad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:columnCount="3"
        app:rowCount="4"
        app:layout_constraintTop_toBottomOf="@id/pinDotsContainer">

        <!-- Keypad buttons 1-9 -->
        <Button
            android:id="@+id/btn1"
            style="@style/PinKeypadButton"
            android:text="1" />
        <Button
            android:id="@+id/btn2"
            style="@style/PinKeypadButton"
            android:text="2" />
        <Button
            android:id="@+id/btn3"
            style="@style/PinKeypadButton"
            android:text="3" />
        <Button
            android:id="@+id/btn4"
            style="@style/PinKeypadButton"
            android:text="4" />
        <Button
            android:id="@+id/btn5"
            style="@style/PinKeypadButton"
            android:text="5" />
        <Button
            android:id="@+id/btn6"
            style="@style/PinKeypadButton"
            android:text="6" />
        <Button
            android:id="@+id/btn7"
            style="@style/PinKeypadButton"
            android:text="7" />
        <Button
            android:id="@+id/btn8"
            style="@style/PinKeypadButton"
            android:text="8" />
        <Button
            android:id="@+id/btn9"
            style="@style/PinKeypadButton"
            android:text="9" />
        <Button
            android:id="@+id/btnClear"
            style="@style/PinKeypadButton"
            android:text="×" />
        <Button
            android:id="@+id/btn0"
            style="@style/PinKeypadButton"
            android:text="0" />
        <Button
            android:id="@+id/btnOk"
            style="@style/PinKeypadButton"
            android:text="✓" />
    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>