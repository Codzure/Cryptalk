<!-- chat_message_item.xml - Message item with encryption indicator -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- For received messages -->
    <androidx.cardview.widget.CardView
        android:id="@+id/receivedMessageCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        app:cardCornerRadius="12dp"
        app:cardBackgroundColor="#E4E4E4"
        app:cardElevation="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/receivedMessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is a received message"
                android:textColor="#000000" />

            <LinearLayout
                android:id="@+id/receivedEncryptionIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:visibility="gone">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_send"
                    app:tint="#777777" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tap to decrypt"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:textColor="#777777" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- For sent messages -->
    <androidx.cardview.widget.CardView
        android:id="@+id/sentMessageCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        app:cardCornerRadius="12dp"
        android:layout_marginTop="48dp"
        app:cardBackgroundColor="#E1F5FE"
        app:cardElevation="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <TextView
                android:id="@+id/sentMessageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="This is a sent message"
                android:textColor="#000000" />

            <LinearLayout
                android:id="@+id/sentEncryptionIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp"
                android:layout_gravity="end"
                android:visibility="visible">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_send"
                    app:tint="#777777" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Encrypted"
                    android:textSize="12sp"
                    android:layout_marginStart="4dp"
                    android:textColor="#777777" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>